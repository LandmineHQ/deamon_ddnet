{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "module": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES6",
            "ES2021"
        ],
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
    }
}